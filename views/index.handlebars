<div class="container">
  <div class="row">
    <div class="col-md-6 col-centered">
      <h1>Eat Da Burger!</h1>
      <img src="assets/img/burger.png" alt="Burger" />
    </div>
  </div>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-3">
      <h2>Burgers</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
          {{burger_name}}
          <button class="devour btn btn-primary" data-id="{{id}}">Devour It!</button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-3">
      <h2>Devoured Burgers</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>
          {{burger_name}}
          <button class="undevour btn btn-primary" data-id="{{id}}">Undevour</button>
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-3"></div>
  </div>
  <hr />
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <h2>Add a Burger</h2>
      <form class="create-form" action="/api/burgers" method="POST">

        <div class="form-group">
          <label for="burger_name">Burger Name:</label>
          <input type="text" id="burger_name" name="burger_name">
        </div>

        <button class="btn btn-primary" type="submit" id="add">Add Burger</button>
      </form>
    </div>
    <div class="col-md-4"></div>
  </div>
</div>